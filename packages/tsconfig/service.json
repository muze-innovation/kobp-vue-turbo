{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "removeComments": true,
    "noUnusedLocals": true,
    "strict": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
